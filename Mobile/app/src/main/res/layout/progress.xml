<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:padding="13dp"
              android:layout_centerHorizontal="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
>

    <ProgressBar
            android:id="@+id/loader"
            android:layout_marginEnd="5dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:indeterminateDrawable="@drawable/colores_espera"
            android:progressDrawable="@drawable/colores_espera"
    />
    <TextView
            android:layout_width="wrap_content"
            android:text="Procesando..."
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_gravity="center_vertical"
            android:id="@+id/loading_msg"
            android:layout_toEndOf="@+id/loader"
            android:layout_height="wrap_content" android:textSize="22sp"
            android:textColorHighlight="@color/color_boton" android:textColorHint="@color/color_boton"
            android:textColorLink="@color/color_boton" android:textCursorDrawable="@color/color_boton"
            android:textColor="@color/color_boton"/>

</LinearLayout>