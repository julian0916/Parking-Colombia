<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_background"
        tools:context=".operaciones.MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


        <ImageButton
            android:id="@+id/imageButtonBlanco"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/boton_redondeado_blanco"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline5" />

        <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@drawable/boton_redondeado_azul"

                android:id="@+id/imageViewAzul"
                app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline7"
                app:layout_constraintStart_toStartOf="@+id/guideline6"/>

        <Button
            android:id="@+id/ventaPrepago"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_azul"
            android:text="@string/boton_venta_prepago"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ventaPrepago_logo"
            app:layout_constraintTop_toBottomOf="@+id/duplicados" />

        <Button
            android:id="@+id/supervision"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_verde"
            android:text="@string/boton_ventana_supervision"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/ventaPrepago_logo"
            app:layout_constraintTop_toBottomOf="@+id/ventaPrepago" />

        <Button
            android:id="@+id/estadistica"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccentOLD"
            android:text="@string/estadistica"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintStart_toEndOf="@+id/estadistica_logo"
            app:layout_constraintTop_toBottomOf="@+id/supervision" />


        <Button
            android:id="@+id/bloqueados_btn"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_azul_claro"
            android:text="@string/bloqueados"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/estadistica_logo"
            app:layout_constraintTop_toBottomOf="@+id/estadistica" />

        <Button
            android:id="@+id/informacion"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_azul_claro"
            android:text="@string/informacion"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ventaPrepago"
            app:layout_constraintStart_toEndOf="@+id/ventaPostpago_logo"
            app:layout_constraintTop_toBottomOf="@+id/imageViewAzul" />

        <Button
            android:id="@+id/ventaPostpago"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_verde"
            android:text="@string/boton_venta_postpago"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ventaPrepago"
            app:layout_constraintStart_toEndOf="@+id/ventaPostpago_logo"
            app:layout_constraintTop_toBottomOf="@+id/informacion" />

        <Button
            android:id="@+id/buscarPorPlaca"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_amarillo"
            android:text="@string/buscar_por_placa"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ventaPrepago"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ventaPrepago"
            app:layout_constraintTop_toBottomOf="@+id/ventaPostpago" />

        <Button
            android:id="@+id/listarVigentes"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_rojo"
            android:text="@string/boton_listar_vigentes"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ventaPrepago"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ventaPrepago"
            app:layout_constraintTop_toBottomOf="@+id/buscarPorPlaca" />

        <Button
            android:id="@+id/duplicados"
            android:layout_width="0dp"
            android:layout_height="@dimen/alto_campo"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_azul_claro"
            android:text="@string/boton_duplicados"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/ventaPrepago"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ventaPrepago"
            app:layout_constraintTop_toBottomOf="@+id/listarVigentes" />
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.02"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline3"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.07"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline4"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.93"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline5"
                                                    android:orientation="horizontal"
                                                    app:layout_constraintGuide_percent="0.06"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline6"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.13"/>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/guideline7"
                                                    android:orientation="vertical"
                                                    app:layout_constraintGuide_percent="0.87"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="166dp"
            android:layout_height="27dp"
            android:text="Menú"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/cardview_light_background"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewAzul"
            app:layout_constraintEnd_toStartOf="@+id/alertas"
            app:layout_constraintStart_toEndOf="@+id/salir"
            app:layout_constraintTop_toTopOf="@+id/imageViewAzul" />

        <TextView
            android:id="@+id/tituloPerfil"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Promotor"
            android:textColor="@color/color_boton"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/estadistica" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Cuenta"
            android:textColor="@color/color_boton"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/promotor" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Zona"
            android:textColor="@color/color_boton"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/cuenta" />

        <TextView
            android:id="@+id/promotor"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/color_boton"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/tituloPerfil" />

        <TextView
            android:id="@+id/cuenta"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/color_boton"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/zona"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/color_boton"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline7"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />
        <Button
                android:layout_width="50dp"
                android:layout_height="0dp" android:id="@+id/salir"
                android:background="@drawable/logo_exit"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAzul"
                app:layout_constraintStart_toStartOf="@+id/imageViewAzul"/>
        <Button
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:id="@+id/alertas"
                android:textColor="@color/color_boton"
                android:textSize="20dp"
                android:background="@drawable/logo_campana_alerta"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewAzul"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"
                android:text=""/>


        <Button
            android:id="@+id/botonPanico"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:background="@drawable/logo_boton_panico"
            android:text=""
            android:textColor="@color/color_boton"
            android:textSize="50sp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cuenta"
            app:layout_constraintTop_toBottomOf="@+id/promotor" />

        <TextView
                android:textColor="@color/color_blanco"
                android:text="fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/zona" app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintEnd_toStartOf="@+id/guideline7"/>
        <TextView
                android:text=" "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView9"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="@+id/guideline3"/>
        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp" android:id="@+id/listarVigentes_logo"
                app:layout_constraintBottom_toBottomOf="@+id/listarVigentes"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/listarVigentes" android:background="@drawable/logo_listar"
                android:backgroundTint="@color/color_rojo"/>

        <Button
            android:id="@+id/estadistica_logo"
            android:layout_width="@dimen/alto_campo"
            android:layout_height="0dp"
            android:background="@drawable/logo_listar"
            android:backgroundTint="@color/colorAccentOLD"
            app:layout_constraintBottom_toBottomOf="@+id/estadistica"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toTopOf="@+id/estadistica" />

        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp"
                android:id="@+id/ventaPrepago_logo"
                android:background="@drawable/logo_dinero"
                app:layout_constraintTop_toTopOf="@+id/ventaPrepago"
                app:layout_constraintBottom_toBottomOf="@+id/ventaPrepago"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                android:backgroundTint="@color/color_azul_oscuro_claro"/>
        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp"
                android:id="@+id/supervision_logo"
                android:background="@drawable/logo_supervisar"
                app:layout_constraintTop_toTopOf="@+id/supervision"
                app:layout_constraintBottom_toBottomOf="@+id/supervision"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                android:backgroundTint="@color/color_verde"/>
        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp" android:id="@+id/buscarPorPlaca_logo"
                app:layout_constraintBottom_toBottomOf="@+id/buscarPorPlaca"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/buscarPorPlaca" android:background="@drawable/logo_buscar"
                android:backgroundTint="@color/color_amarillo"/>
        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp" android:id="@+id/duplicados_logo"
                app:layout_constraintBottom_toBottomOf="@+id/duplicados"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/duplicados" android:background="@drawable/logo_duplicado"
                android:backgroundTint="@color/color_azul_claro"/>
        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp" android:id="@+id/informacion_logo"
                app:layout_constraintBottom_toBottomOf="@+id/informacion"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintTop_toTopOf="@+id/informacion"
                android:background="@drawable/logo_info"
                android:backgroundTint="@color/color_azul_claro"/>
        <Button
                android:layout_width="@dimen/alto_campo"
                android:layout_height="0dp" android:id="@+id/ventaPostpago_logo"
                app:layout_constraintBottom_toBottomOf="@+id/ventaPostpago"
                app:layout_constraintStart_toStartOf="@+id/guideline6"
                app:layout_constraintVertical_bias="0.0" app:layout_constraintTop_toTopOf="@+id/ventaPostpago"
                android:background="@drawable/logo_carro" android:backgroundTint="@color/color_verde"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>